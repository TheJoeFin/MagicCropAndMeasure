<local:MeasurementControlBase
    x:Class="MagickCrop.Controls.PolygonMeasurementControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MagickCrop.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MagickCrop.ViewModels.Measurements"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:PolygonMeasurementViewModel}">
    <Canvas x:Name="MeasurementCanvas">
        <Path
            x:Name="PolygonPath"
            Data="{Binding Converter={StaticResource PolygonPathConverter}}"
            Stroke="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
            StrokeDashArray="4,2"
            StrokeThickness="{Binding StrokeThickness}"
            Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
            Opacity="0.4"
            IsHitTestVisible="False"
            ToolTip="Measured polygon" />
        
        <Line
            x:Name="PreviewLine"
            Stroke="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
            StrokeDashArray="2,2"
            StrokeThickness="1"
            Opacity="0.6"
            Visibility="Collapsed"
            IsHitTestVisible="False"
            ToolTip="Preview segment" />

        <ItemsControl x:Name="VertexPoints" ItemsSource="{Binding Vertices}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Ellipse
                        Width="12"
                        Height="12"
                        Canvas.Left="{Binding X, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=6}"
                        Canvas.Top="{Binding Y, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=6}"
                        Cursor="SizeAll"
                        Fill="{Binding RelativeSource={RelativeSource AncestorType=local:PolygonMeasurementControl}, Path=ViewModel.Color, Converter={StaticResource ColorToBrushConverter}}"
                        MouseDown="MeasurementPoint_MouseDown"
                        Opacity="0.8"
                        Stroke="White"
                        StrokeThickness="1"
                        Tag="{Binding}"
                        ToolTip="Drag to move vertex" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Border
            x:Name="MeasurementText"
            Padding="5,2"
            Background="#7F000000"
            CornerRadius="3"
            ToolTip="Polygon measurement options">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="CopyMeasurementMenuItem_Click" Header="Copy Measurement" ToolTip="Copy the polygon properties" />
                    <MenuItem Click="RemoveMeasurementMenuItem_Click" Header="Remove Measurement" ToolTip="Delete this measurement" />
                </ContextMenu>
            </Border.ContextMenu>
            <Button
                x:Name="MeasurementButton"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Click="MeasurementButton_Click"
                ToolTip="Click to open options">
                <TextBlock
                    x:Name="PolygonTextBlock"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding DisplayText}" />
            </Button>
        </Border>
    </Canvas>
</local:MeasurementControlBase>