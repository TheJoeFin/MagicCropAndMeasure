<UserControl
    x:Class="MagickCrop.Controls.PolygonMeasurementControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Canvas x:Name="MeasurementCanvas">
        <Path
            x:Name="PolygonPath"
            Stroke="#0066FF"
            StrokeDashArray="4,2"
            StrokeThickness="2"
            Fill="#200066FF"
            Opacity="0.4"
            IsHitTestVisible="False"
            ToolTip="Measured polygon" />
        
        <Line
            x:Name="PreviewLine"
            Stroke="#0066FF"
            StrokeDashArray="2,2"
            StrokeThickness="1"
            Opacity="0.6"
            Visibility="Collapsed"
            IsHitTestVisible="False"
            ToolTip="Preview segment" />

        <Border
            x:Name="MeasurementText"
            Padding="5,2"
            Background="#7F000000"
            CornerRadius="3"
            ToolTip="Polygon measurement options">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="CopyMeasurementMenuItem_Click" Header="Copy Measurement" ToolTip="Copy the polygon properties" />
                    <MenuItem Click="RemoveMeasurementMenuItem_Click" Header="Remove Measurement" ToolTip="Delete this measurement" />
                </ContextMenu>
            </Border.ContextMenu>
            <Button
                x:Name="MeasurementButton"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Click="MeasurementButton_Click"
                ToolTip="Click to open options">
                <TextBlock
                    x:Name="PolygonTextBlock"
                    FontWeight="Bold"
                    Foreground="White" />
            </Button>
        </Border>
    </Canvas>
</UserControl>