<UserControl
    x:Class="MagickCrop.Controls.RecentProjectItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:models="clr-namespace:MagickCrop.Models"
    Width="200"
    Height="150"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=models:RecentProjectInfo}"
    Cursor="Hand"
    MouseLeftButtonUp="OnMouseLeftButtonUp">
    <Border
        Margin="5"
        Background="{wpfui:ThemeResource ControlFillColorDefaultBrush}"
        BorderBrush="{wpfui:ThemeResource ControlStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="5"
                Opacity="0.3"
                ShadowDepth="2" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Background="{wpfui:ThemeResource ControlFillColorSecondaryBrush}"
                BorderThickness="0"
                CornerRadius="8,8,0,0">
                <Image
                    Margin="5"
                    Source="{Binding Thumbnail}"
                    Stretch="Uniform" />
            </Border>

            <Grid Grid.Row="1" Margin="5,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock
                        FontWeight="SemiBold"
                        Text="{Binding Name}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap" />
                    <TextBlock
                        FontSize="11"
                        Opacity="0.7"
                        Text="{Binding LastModifiedFormatted}" />
                </StackPanel>

                <wpfui:Button
                    Grid.Column="1"
                    Width="24"
                    Height="24"
                    Margin="0"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="OnDeleteClick"
                    ToolTip="Remove from recent projects">
                    <wpfui:SymbolIcon Symbol="Delete24" />
                </wpfui:Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
