<local:MeasurementControlBase
    x:Class="MagickCrop.Controls.RectangleMeasurementControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MagickCrop.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MagickCrop.ViewModels.Measurements"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:RectangleMeasurementViewModel}">
    <Canvas x:Name="MeasurementCanvas">
        <Rectangle
            x:Name="MeasurementRectangle"
            Canvas.Left="{Binding Bounds.X}"
            Canvas.Top="{Binding Bounds.Y}"
            Width="{Binding Bounds.Width}"
            Height="{Binding Bounds.Height}"
            Stroke="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
            StrokeDashArray="4,2"
            StrokeThickness="2"
            Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
            Opacity="0.4"
            ToolTip="Measured rectangle" />
        <Ellipse
            x:Name="TopLeftPoint"
            Width="12"
            Height="12"
            Canvas.Left="{Binding TopLeft.X, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=6}"
            Canvas.Top="{Binding TopLeft.Y, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=6}"
            Cursor="SizeAll"
            Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
            MouseDown="MeasurementPoint_MouseDown"
            Opacity="0.8"
            Stroke="White"
            StrokeThickness="1"
            Tag="0"
            ToolTip="Drag to move top-left corner" />
        <Ellipse
            x:Name="BottomRightPoint"
            Width="12"
            Height="12"
            Canvas.Left="{Binding BottomRight.X, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=6}"
            Canvas.Top="{Binding BottomRight.Y, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=6}"
            Cursor="SizeAll"
            Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
            MouseDown="MeasurementPoint_MouseDown"
            Opacity="0.8"
            Stroke="White"
            StrokeThickness="1"
            Tag="1"
            ToolTip="Drag to move bottom-right corner" />
        <Border
            x:Name="MeasurementText"
            Canvas.Left="{Binding Bounds.X, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=40}"
            Canvas.Top="{Binding Bounds.Y, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=20}"
            Padding="5,2"
            Background="#7F000000"
            CornerRadius="3"
            ToolTip="Rectangle measurement options">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="CopyMeasurementMenuItem_Click" Header="Copy Measurement" ToolTip="Copy the rectangle dimensions" />
                    <MenuItem Click="RemoveMeasurementMenuItem_Click" Header="Remove Measurement" ToolTip="Delete this measurement" />
                </ContextMenu>
            </Border.ContextMenu>
            <Button
                x:Name="MeasurementButton"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Click="MeasurementButton_Click"
                ToolTip="Click to open options">
                <TextBlock
                    x:Name="RectangleTextBlock"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding DisplayText}" />
            </Button>
        </Border>
    </Canvas>
</local:MeasurementControlBase>
