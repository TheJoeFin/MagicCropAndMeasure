<local:MeasurementControlBase
    x:Class="MagickCrop.Controls.DistanceMeasurementControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MagickCrop.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MagickCrop.ViewModels.Measurements"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:DistanceMeasurementViewModel}">
    <Canvas x:Name="MeasurementCanvas">
        <Line
            x:Name="MeasurementLine"
            X1="{Binding StartPoint.X}"
            Y1="{Binding StartPoint.Y}"
            X2="{Binding EndPoint.X}"
            Y2="{Binding EndPoint.Y}"
            Opacity="0.8"
            Stroke="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
            StrokeDashArray="4,2"
            StrokeThickness="{Binding StrokeThickness}"
            ToolTip="Distance line" />

        <Ellipse
            x:Name="StartPoint"
            Width="12"
            Height="12"
            Canvas.Left="{Binding StartPoint.X, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=6}"
            Canvas.Top="{Binding StartPoint.Y, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=6}"
            Cursor="SizeAll"
            Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
            MouseDown="MeasurementPoint_MouseDown"
            Opacity="0.8"
            Stroke="White"
            StrokeThickness="1"
            Tag="0"
            ToolTip="Drag to set start point" />
        <Ellipse
            x:Name="EndPoint"
            Width="12"
            Height="12"
            Canvas.Left="{Binding EndPoint.X, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=6}"
            Canvas.Top="{Binding EndPoint.Y, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=6}"
            Cursor="SizeAll"
            Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
            MouseDown="MeasurementPoint_MouseDown"
            Opacity="0.8"
            Stroke="White"
            StrokeThickness="1"
            Tag="1"
            ToolTip="Drag to set end point" />

        <Border
            x:Name="MeasurementText"
            Canvas.Left="{Binding MidPoint.X, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=40}"
            Canvas.Top="{Binding MidPoint.Y, Converter={StaticResource SubtractHalfConverter}, ConverterParameter=20}"
            Padding="5,2"
            Background="#7F000000"
            CornerRadius="3"
            ToolTip="Distance measurement options">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="CopyMeasurementMenuItem_Click" Header="Copy Measurement" ToolTip="Copy the measurement value" />
                    <MenuItem Click="SetRealWorldLengthMenuItem_Click" Header="Set Real World Length" ToolTip="Set a real-world length for this line" />
                    <MenuItem Click="RemoveMeasurementMenuItem_Click" Header="Remove Measurement" ToolTip="Delete this measurement" />
                </ContextMenu>
            </Border.ContextMenu>
            <Button
                x:Name="MeasurementButton"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Click="MeasurementButton_Click"
                ToolTip="Click to open options">
                <TextBlock
                    x:Name="DistanceTextBlock"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding DisplayText}" />
            </Button>
        </Border>
    </Canvas>
</local:MeasurementControlBase>
