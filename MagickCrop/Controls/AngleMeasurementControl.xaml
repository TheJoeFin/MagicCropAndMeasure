<UserControl
    x:Class="MagickCrop.Controls.AngleMeasurementControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Canvas x:Name="MeasurementCanvas">
        <Line
            x:Name="Line1"
            IsHitTestVisible="False"
            Opacity="0.8"
            Stroke="#0066FF"
            StrokeDashArray="4,2"
            StrokeThickness="2"
            ToolTip="Angle leg" />

        <Line
            x:Name="Line2"
            IsHitTestVisible="False"
            Opacity="0.8"
            Stroke="#0066FF"
            StrokeDashArray="4,2"
            StrokeThickness="2"
            ToolTip="Angle leg" />

        <Path
            x:Name="AngleArc"
            Fill="#200066FF"
            IsHitTestVisible="False"
            Opacity="0.8"
            Stroke="#0066FF"
            StrokeLineJoin="Round"
            StrokeThickness="2"
            ToolTip="Angle arc" />

        <Ellipse
            x:Name="Point1"
            Width="12"
            Height="12"
            Cursor="SizeAll"
            Fill="#0066FF"
            MouseDown="MeasurementPoint_MouseDown"
            Opacity="0.8"
            Stroke="White"
            StrokeThickness="1"
            Tag="0"
            ToolTip="Drag to move first point" />

        <Ellipse
            x:Name="VertexPoint"
            Width="12"
            Height="12"
            Cursor="SizeAll"
            Fill="#0066FF"
            MouseDown="MeasurementPoint_MouseDown"
            Opacity="0.8"
            Stroke="White"
            StrokeThickness="1"
            Tag="1"
            ToolTip="Drag to move vertex" />

        <Ellipse
            x:Name="Point3"
            Width="12"
            Height="12"
            Cursor="SizeAll"
            Fill="#0066FF"
            MouseDown="MeasurementPoint_MouseDown"
            Opacity="0.8"
            Stroke="White"
            StrokeThickness="1"
            Tag="2"
            ToolTip="Drag to move third point" />

        <Border
            x:Name="MeasurementText"
            Padding="5,2"
            Background="#7F000000"
            CornerRadius="3"
            ToolTip="Angle measurement options">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="CopyMeasurementMenuItem_Click" Header="Copy Measurement" ToolTip="Copy the angle value" />
                    <MenuItem Click="RemoveMeasurementMenuItem_Click" Header="Remove Measurement" ToolTip="Delete this measurement" />
                </ContextMenu>
            </Border.ContextMenu>
            <Button
                x:Name="MeasurementButton"
                Padding="0"
                Background="Transparent"
                BorderThickness="0"
                Click="MeasurementButton_Click"
                ToolTip="Click to open options">
                <TextBlock
                    x:Name="AngleTextBlock"
                    FontWeight="Bold"
                    Foreground="White" />
            </Button>
        </Border>
    </Canvas>
</UserControl>
