<UserControl
    x:Class="MagickCrop.Controls.QuadrilateralSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    MaxWidth="180"
    HorizontalAlignment="Center"
    d:DesignHeight="200"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            FontSize="14"
            FontWeight="SemiBold"
            Text="Select a quadrilateral:" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="QuadrilateralList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Click="QuadrilateralItem_Click"
                            MouseEnter="QuadrilateralItem_MouseEnter"
                            MouseLeave="QuadrilateralItem_MouseLeave"
                            ToolTip="Click to use this quadrilateral">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Margin="0,4"
                                        Padding="12,8"
                                        Background="{DynamicResource CardBackground}"
                                        BorderBrush="{DynamicResource CardBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource CardBackgroundSecondary}" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <Canvas
                                    Width="60"
                                    Height="60"
                                    Margin="0,0,12,0"
                                    Background="Transparent">
                                    <Polygon
                                        Points="{Binding PreviewPoints}"
                                        Stroke="#0066FF"
                                        StrokeThickness="2" />
                                </Canvas>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                    <TextBlock
                                        Margin="0,4,0,0"
                                        FontSize="11"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Opacity="0.8"
                                        Text="{Binding Description}" />
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Margin="0,8"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <wpfui:Button
                Margin="0,0,8,0"
                Appearance="Secondary"
                Click="ManualButton_Click"
                Content="Set Manually"
                ToolTip="Position corners manually"
                Visibility="Collapsed" />
            <wpfui:Button
                Appearance="Secondary"
                Click="CancelButton_Click"
                Content="Cancel Detection" />
        </StackPanel>
    </Grid>
</UserControl>
