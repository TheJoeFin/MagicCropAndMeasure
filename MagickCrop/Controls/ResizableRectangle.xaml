<UserControl
    x:Class="MagickCrop.ResizableRectangle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MagickCrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="500"
    Height="400"
    MinWidth="20"
    MinHeight="20"
    MouseMove="UserControl_MouseMove"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Ellipse">
            <Setter Property="Height" Value="12" />
            <Setter Property="Width" Value="12" />
            <Setter Property="Cursor" Value="SizeAll" />
            <Setter Property="Fill" Value="#0066FF" />
            <Setter Property="Stroke" Value="White" />
            <Setter Property="Opacity" Value="0.8" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Rectangle
            x:Name="rectangle"
            Cursor="SizeAll"
            MouseDown="element_MouseDown"
            Stroke="Blue"
            StrokeDashArray="2,2"
            StrokeThickness="2"
            Tag="Pan">
            <Rectangle.Fill>
                <SolidColorBrush Opacity="0.06" Color="Blue" />
            </Rectangle.Fill>
            <Rectangle.ToolTip>
                Drag to pan the crop rectangle
            </Rectangle.ToolTip>
        </Rectangle>

        <Ellipse
            Margin="-5,-5,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Cursor="SizeNWSE"
            Fill="Blue"
            MouseDown="element_MouseDown"
            Tag="TopLeft"
            ToolTip="Resize from top-left" />
        <Ellipse
            Margin="0,-5,-5,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="SizeNESW"
            Fill="Blue"
            MouseDown="element_MouseDown"
            Tag="TopRight"
            ToolTip="Resize from top-right" />
        <Ellipse
            Margin="0,0,-5,-5"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Cursor="SizeNWSE"
            Fill="Blue"
            MouseDown="element_MouseDown"
            Tag="BottomRight"
            ToolTip="Resize from bottom-right" />
        <Ellipse
            Margin="-5,0,0,-5"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Cursor="SizeNESW"
            Fill="Blue"
            MouseDown="element_MouseDown"
            Tag="BottomLeft"
            ToolTip="Resize from bottom-left" />

        <Rectangle
            Width="20"
            Height="8"
            Margin="0,-3,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Cursor="SizeNS"
            Fill="Blue"
            MouseDown="element_MouseDown"
            RadiusX="4"
            RadiusY="4"
            Stroke="White"
            StrokeThickness=".6"
            Tag="Top"
            ToolTip="Resize from top edge" />
        <Rectangle
            Width="8"
            Height="20"
            Margin="0,0,-3,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Cursor="SizeWE"
            Fill="Blue"
            MouseDown="element_MouseDown"
            RadiusX="4"
            RadiusY="4"
            Stroke="White"
            StrokeThickness=".6"
            Tag="Right"
            ToolTip="Resize from right edge" />
        <Rectangle
            Width="20"
            Height="8"
            Margin="0,0,0,-3"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Cursor="SizeNS"
            Fill="Blue"
            MouseDown="element_MouseDown"
            RadiusX="4"
            RadiusY="4"
            Stroke="White"
            StrokeThickness=".6"
            Tag="Bottom"
            ToolTip="Resize from bottom edge" />
        <Rectangle
            Width="8"
            Height="20"
            Margin="-3,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Cursor="SizeWE"
            Fill="Blue"
            MouseDown="element_MouseDown"
            RadiusX="4"
            RadiusY="4"
            Stroke="White"
            StrokeThickness=".6"
            Tag="Left"
            ToolTip="Resize from left edge" />
    </Grid>
</UserControl>
