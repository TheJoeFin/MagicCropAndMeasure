<wpfui:FluentWindow
    x:Class="MagickCrop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:MagickCrop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MagickCrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:MagickCrop.Models"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Magick Crop &amp; Measure"
    Width="1000"
    Height="800"
    AllowDrop="True"
    AllowsTransparency="True"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    ExtendsContentIntoTitleBar="True"
    MouseMove="TopLeft_MouseMove"
    PreviewDragOver="FluentWindow_PreviewDragOver"
    PreviewDrop="FluentWindow_PreviewDrop"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="Ellipse">
            <Setter Property="Height" Value="12" />
            <Setter Property="Width" Value="12" />
            <Setter Property="Cursor" Value="SizeAll" />
            <Setter Property="Fill" Value="#0066FF" />
            <Setter Property="Stroke" Value="White" />
            <Setter Property="Opacity" Value="0.8" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

        <!--  Add a style for narrow Tab Headers  -->
        <Style
            x:Key="NarrowTabHeaderStyle"
            BasedOn="{StaticResource {x:Type TabItem}}"
            TargetType="TabItem">
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="Width" Value="60" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <wpfui:TitleBar
            x:Name="wpfuiTitleBar"
            Title="Magick Crop &amp; Measure by TheJoeFin"
            Grid.ColumnSpan="2"
            Height="32"
            Background="{wpfui:ThemeResource ApplicationBackgroundBrush}"
            Foreground="{wpfui:ThemeResource TextFillColorPrimaryBrush}">
            <wpfui:TitleBar.Resources>
                <Style BasedOn="{StaticResource {x:Type wpfui:TitleBarButton}}" TargetType="wpfui:TitleBarButton">
                    <Setter Property="ButtonsForeground" Value="White" />
                    <Setter Property="MouseOverButtonsForeground" Value="Yellow" />
                </Style>
            </wpfui:TitleBar.Resources>
            <wpfui:TitleBar.Icon>
                <wpfui:ImageIcon Source="/Iconv3.ico" />
            </wpfui:TitleBar.Icon>
        </wpfui:TitleBar>

        <Grid
            x:Name="MainGrid"
            Grid.Row="1"
            Grid.Column="0"
            Background="Gray"
            ClipToBounds="True"
            PreviewMouseWheel="ShapeCanvas_PreviewMouseWheel">
            <Canvas x:Name="ShapeCanvas" Margin="50,50,0,0">
                <Canvas.RenderTransform>
                    <MatrixTransform />
                </Canvas.RenderTransform>
                <Grid x:Name="ImageGrid" Width="700">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Image
                        x:Name="MainImage"
                        MouseDown="ShapeCanvas_MouseDown"
                        Stretch="Uniform" />
                    <ResizeGrip
                        x:Name="ImageResizeGrip"
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="Blue"
                        Cursor="SizeAll"
                        IsManipulationEnabled="True"
                        MouseDown="ImageResizeGrip_MouseDown"
                        ToolTip="Resize handle"
                        Visibility="Hidden" />
                </Grid>

                <Ellipse
                    x:Name="TopLeft"
                    Canvas.Left="100"
                    Canvas.Top="100"
                    MouseDown="TopLeft_MouseDown"
                    Tag="0" />
                <Ellipse
                    x:Name="TopRight"
                    Canvas.Left="700"
                    Canvas.Top="100"
                    MouseDown="TopLeft_MouseDown"
                    Tag="1" />
                <Ellipse
                    x:Name="BottomRight"
                    Canvas.Left="700"
                    Canvas.Top="525"
                    MouseDown="TopLeft_MouseDown"
                    Tag="2" />
                <Ellipse
                    x:Name="BottomLeft"
                    Canvas.Left="100"
                    Canvas.Top="525"
                    MouseDown="TopLeft_MouseDown"
                    Tag="3" />

                <local:ResizableRectangle x:Name="CroppingRectangle" Visibility="Collapsed" />
            </Canvas>
        </Grid>

        <c:WelcomeMessage
            x:Name="WelcomeMessageModal"
            Grid.Row="1"
            OverlayButtonEvent="OverlayButton_Click"
            PasteButtonEvent="PasteButton_Click"
            PrimaryButtonEvent="OpenFileButton_Click" />

        <Border
            x:Name="BottomBorder"
            Grid.Row="1"
            Grid.Column="1"
            Padding="12,12"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Background="{wpfui:ThemeResource ApplicationBackgroundBrush}"
            Visibility="Collapsed">
            <Grid x:Name="BottomPane">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <ScrollViewer>
                    <StackPanel Width="200" Orientation="Vertical">
                        <Grid Width="160">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                x:Name="ImageIconOpenedName"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                Symbol="Image24" />
                            <TextBlock
                                x:Name="ReOpenFileText"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="Image File Name"
                                TextTrimming="CharacterEllipsis" />
                            <wpfui:SymbolIcon
                                x:Name="CloseFileIcon"
                                Grid.Column="2"
                                Margin="5,0,0,0"
                                MouseDown="CloseFileIcon_MouseDown"
                                Symbol="Dismiss24"
                                ToolTip="Click to close and show the welcome screen"
                                Visibility="Collapsed" />
                        </Grid>
                        <StackPanel
                            x:Name="UndoRedoPanel"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <MenuItem
                                x:Name="UndoMenuItem"
                                Click="UndoMenuItem_Click"
                                Header="Undo"
                                IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                   AncestorType={x:Type wpfui:FluentWindow}},
                                                    Path=undoRedo.CanUndo,
                                                    Mode=OneWay}">
                                <MenuItem.Icon>
                                    <wpfui:SymbolIcon Symbol="ArrowUndo24" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem
                                x:Name="RedoMenuItem"
                                Click="RedoMenuItem_Click"
                                Header=""
                                IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                   AncestorType={x:Type wpfui:FluentWindow}},
                                                    Path=undoRedo.CanRedo,
                                                    Mode=OneWay}">
                                <MenuItem.Icon>
                                    <wpfui:SymbolIcon Symbol="ArrowRedo24" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </StackPanel>
                        <TextBlock Text="Tools" />
                        <TabControl ItemContainerStyle="{StaticResource NarrowTabHeaderStyle}">
                            <TabItem x:Name="TransformTabItem">
                                <TabItem.Header>
                                    <wpfui:SymbolIcon Symbol="Crop24" ToolTip="Crop and transform" />
                                </TabItem.Header>
                                <StackPanel Orientation="Vertical">
                                    <MenuItem
                                        Name="Rotate90CwMenuItem"
                                        Click="Rotate90CwMenuItem_Click"
                                        Header="Rotate 90° CW"
                                        ToolTip="Rotate 90 degrees clockwise">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="RotateRight24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="Rotate90CcwMenuItem"
                                        Click="Rotate90CcwMenuItem_Click"
                                        Header="Rotate 90° CCW"
                                        ToolTip="Rotate 90 degrees counter-clockwise">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="RotateLeft24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="FlipHozMenuItem"
                                        Click="FlipHozMenuItem_Click"
                                        Header="Flip Horizontal">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="FlipHorizontal24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="FlipVertMenuItem"
                                        Click="FlipVertMenuItem_Click"
                                        Header="Flip Vertical">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="FlipVertical24" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <Separator />

                                    <MenuItem
                                        Name="StretchMenuItem"
                                        Click="StretchMenuItem_Click"
                                        Header="Resize Image">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon RenderTransformOrigin="0.5, 0.5" Symbol="Resize24">
                                                <wpfui:SymbolIcon.RenderTransform>
                                                    <RotateTransform Angle="-90" />
                                                </wpfui:SymbolIcon.RenderTransform>
                                            </wpfui:SymbolIcon>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="CropImage"
                                        Click="CropImage_Click"
                                        Header="Crop Image">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="Crop24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="PerspectiveCorrectionMenuItem"
                                        Click="PerspectiveCorrectionMenuItem_Click"
                                        Header="Transform Image">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Foreground="#0066FF" Symbol="SelectObjectSkewEdit24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </StackPanel>
                            </TabItem>
                            <TabItem x:Name="EditImageTabItem">
                                <TabItem.Header>
                                    <wpfui:SymbolIcon Symbol="ImageEdit24" ToolTip="Adjust image appearance" />
                                </TabItem.Header>
                                <StackPanel Orientation="Vertical">
                                    <MenuItem
                                        Name="AutoContrastMenuItem"
                                        Click="AutoContrastMenuItem_Click"
                                        Header="10% Auto Contrast">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="DarkTheme24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="BlackPointMenuItem"
                                        Click="BlackPointMenuItem_Click"
                                        Header="10% Black Threshold">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="WeatherMoon24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="WhitePointMenuItem"
                                        Click="WhitePointMenuItem_Click"
                                        Header="10% White Threshold">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="BrightnessHigh24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem
                                        Name="GrayscaleMenuItem"
                                        Click="GrayscaleMenuItem_Click"
                                        Header="Grayscale">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="Color24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="InvertMenuItem"
                                        Click="InvertMenuItem_Click"
                                        Header="Invert Colors">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="SquareShadow20" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="WhiteBalanceMenuItem"
                                        Click="WhiteBalanceMenuItem_Click"
                                        Header="Auto White Balance">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="Whiteboard24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="AutoLevelsMenuItem"
                                        Click="AutoLevelsMenuItem_Click"
                                        Header="Auto Level">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="BezierCurveSquare20" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="AutoGammaMenuItem"
                                        Click="AutoGammaMenuItem_Click"
                                        Header="Auto Gamma">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="AddSubtractCircle24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </StackPanel>
                            </TabItem>
                            <TabItem x:Name="MeasureTabItem">
                                <TabItem.Header>
                                    <wpfui:SymbolIcon Symbol="Ruler24" ToolTip="Measure distance and angle" />
                                </TabItem.Header>
                                <StackPanel Orientation="Vertical">
                                    <MenuItem
                                        Name="MeasureDistanceMenuItem"
                                        Click="MeasureDistanceMenuItem_Click"
                                        Header="Add Distance Measure">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="Ruler24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="MeasureAngleMenuItem"
                                        Click="MeasureAngleMenuItem_Click"
                                        Header="Add Angle Measure">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="DataPie24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="HorizontalLineMenuItem"
                                        Click="HorizontalLineMenuItem_Click"
                                        Header="Add Horizontal Line">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="SplitHorizontal24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="VerticalLineMenuItem"
                                        Click="VerticalLineMenuItem_Click"
                                        Header="Add Vertical Line">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="SplitVertical24" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <StackPanel
                                        x:Name="MeasurementButtonPanel"
                                        Grid.Row="1"
                                        Orientation="Vertical">

                                        <Label Margin="0,10,0,0" Content="Set Scale (pixels/unit):" />
                                        <wpfui:NumberBox
                                            x:Name="ScaleInput"
                                            Width="150"
                                            Minimum="0.0001"
                                            ToolTip="Set the scale of pixels to real-world units"
                                            ValueChanged="ScaleInput_ValueChanged"
                                            Value="1.0" />

                                        <TextBox
                                            x:Name="MeasurementUnits"
                                            Width="150"
                                            Margin="0,10,0,16"
                                            AcceptsReturn="False"
                                            AcceptsTab="False"
                                            Text="Pixels"
                                            TextChanged="MeasurementUnits_TextChanged" />

                                        <wpfui:HyperlinkButton
                                            x:Name="CloseMeasurementButton"
                                            HorizontalAlignment="Center"
                                            Appearance="Danger"
                                            Click="CloseMeasurementButton_Click"
                                            Content="Clear all"
                                            Foreground="Red">
                                            <wpfui:HyperlinkButton.Icon>
                                                <wpfui:SymbolIcon Symbol="Dismiss24" />
                                            </wpfui:HyperlinkButton.Icon>
                                        </wpfui:HyperlinkButton>
                                    </StackPanel>
                                </StackPanel>
                            </TabItem>
                        </TabControl>

                    </StackPanel>
                </ScrollViewer>
                <StackPanel
                    x:Name="CropButtonPanel"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Visibility="Collapsed">
                    <wpfui:Button
                        x:Name="ApplyCropButton"
                        Width="180"
                        Margin="0,8"
                        Appearance="Primary"
                        Click="ApplyCropButton_Click"
                        Content="Apply Crop"
                        Foreground="White">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="Crop24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                    <wpfui:Button
                        x:Name="CancelCropButton"
                        Width="180"
                        Appearance="Danger"
                        Click="CancelCrop_Click"
                        Content="Cancel">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="Dismiss24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                </StackPanel>
                <StackPanel
                    x:Name="TransformButtonPanel"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    d:Visibility="Visible"
                    Orientation="Vertical"
                    Visibility="Collapsed">

                    <Grid
                        x:Name="CustomButtonGrid"
                        HorizontalAlignment="Left"
                        Visibility="Collapsed">
                        <wpfui:Flyout
                            Margin="0,0,0,20"
                            IsOpen="{Binding ElementName=EditToggleButton,
                                             Path=IsChecked,
                                             Mode=TwoWay}"
                            Placement="Top">
                            <Grid x:Name="CustomSizeStackPanel">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Width="80"
                                    VerticalAlignment="Center"
                                    Content="Width"
                                    Target="{Binding ElementName=CustomWidth}" />
                                <wpfui:NumberBox
                                    x:Name="CustomWidth"
                                    Grid.Column="1"
                                    Width="150"
                                    VerticalAlignment="Center"
                                    Minimum="0"
                                    ValueChanged="CustomWidth_ValueChanged"
                                    Value="10" />
                                <Label
                                    Grid.Row="2"
                                    Width="80"
                                    VerticalAlignment="Center"
                                    Content="Height"
                                    Target="{Binding ElementName=CustomHeight}" />
                                <wpfui:NumberBox
                                    x:Name="CustomHeight"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="150"
                                    VerticalAlignment="Center"
                                    Minimum="0"
                                    ValueChanged="CustomWidth_ValueChanged"
                                    Value="5" />
                            </Grid>
                        </wpfui:Flyout>
                        <ToggleButton
                            x:Name="EditToggleButton"
                            Width="180"
                            Margin="0,4"
                            HorizontalContentAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="ResizeImage24" />
                                <TextBlock x:Name="AspectRatioTextBox" Text="Ratio: 0.5" />
                            </StackPanel>
                        </ToggleButton>
                    </Grid>
                    <ComboBox
                        x:Name="AspectRatioComboBox"
                        Width="180"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        SelectionChanged="AspectRatioComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="models:AspectRatioItem">
                                <StackPanel Orientation="Horizontal">
                                    <wpfui:SymbolIcon Margin="0,0,10,0" Symbol="{Binding Symbol}" />
                                    <TextBlock Text="{Binding Text}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <local:AspectRatioTransform x:Name="AspectRatioTransformPreview" />
                    <wpfui:Button
                        x:Name="ApplyTransformButton"
                        Width="180"
                        Margin="0,6"
                        Appearance="Primary"
                        Click="ApplyButton_Click"
                        Content="Apply Transform"
                        Foreground="White">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="SelectObjectSkewEdit24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                    <wpfui:Button
                        x:Name="CancelTransformButton"
                        Width="180"
                        Appearance="Danger"
                        Click="CancelTransformButton_Click"
                        Content="Cancel">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="Dismiss24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                </StackPanel>
                <StackPanel
                    x:Name="ResizeButtonsPanel"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Visibility="Collapsed">
                    <wpfui:Button
                        x:Name="ApplyResizeButton"
                        Width="180"
                        Margin="0,6"
                        Appearance="Primary"
                        Click="ApplyResizeButton_Click"
                        Content="Apply Resize"
                        Foreground="White">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon RenderTransformOrigin="0.5, 0.5" Symbol="Resize24">
                                <wpfui:SymbolIcon.RenderTransform>
                                    <RotateTransform Angle="-90" />
                                </wpfui:SymbolIcon.RenderTransform>
                            </wpfui:SymbolIcon>
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                    <wpfui:Button
                        x:Name="CancelResizeButton"
                        Width="180"
                        Appearance="Danger"
                        Click="CancelResizeButton_Click"
                        Content="Cancel">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="Dismiss24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                </StackPanel>
                <StackPanel
                    x:Name="SaveAndOpenDestFolderPanel"
                    Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <wpfui:Button
                        x:Name="SavePackageButton"
                        Width="180"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        Click="SavePackageButton_Click"
                        Content="Save Package..."
                        ToolTip="Save image with measurements as a .mcm package">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="SaveCopy24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                    <wpfui:Button
                        x:Name="Save"
                        Width="180"
                        Margin="0,8"
                        HorizontalAlignment="Center"
                        Click="Save_Click"
                        Content="Save image..."
                        ToolTip="Apply Transform, Save, and Preview file">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="Save24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                    <wpfui:Button
                        x:Name="OpenFolderButton"
                        Width="180"
                        HorizontalAlignment="Center"
                        Click="OpenFolderButton_Click"
                        Content="Open Folder"
                        IsEnabled="False"
                        ToolTip="Open Folder Where File Was Saved">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="FolderArrowRight24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                </StackPanel>
            </Grid>
        </Border>
        <wpfui:ProgressRing
            x:Name="IsWorkingBar"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="#0066FF"
            IsIndeterminate="True"
            Visibility="Collapsed" />

        <ContentPresenter
            x:Name="Presenter"
            Grid.Row="1"
            Grid.ColumnSpan="2" />

        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem
                    x:Name="ResetMenuItem"
                    Click="ResetMenuItem_Click"
                    Header="Reset" />
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</wpfui:FluentWindow>
