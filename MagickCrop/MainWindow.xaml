<wpfui:FluentWindow
    x:Class="MagickCrop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:MagickCrop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MagickCrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:MagickCrop.Models"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:behaviors="clr-namespace:MagickCrop.Behaviors"
    Title="Magick Crop &amp; Measure"
    Width="1000"
    Height="800"
    AllowDrop="True"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    MouseMove="TopLeft_MouseMove"
    PreviewDragOver="FluentWindow_PreviewDragOver"
    PreviewDrop="FluentWindow_PreviewDrop"
    PreviewKeyDown="FluentWindow_PreviewKeyDown"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="Ellipse">
            <Setter Property="Height" Value="12" />
            <Setter Property="Width" Value="12" />
            <Setter Property="Cursor" Value="SizeAll" />
            <Setter Property="Fill" Value="#0066FF" />
            <Setter Property="Stroke" Value="White" />
            <Setter Property="Opacity" Value="0.8" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>
        <Style
            x:Key="SmallToggleButton"
            BasedOn="{StaticResource {x:Type ToggleButton}}"
            TargetType="ToggleButton">
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="MinWidth" Value="100" />
        </Style>
        <!--  Add a style for narrow Tab Headers  -->
        <Style
            x:Key="NarrowTabHeaderStyle"
            BasedOn="{StaticResource {x:Type TabItem}}"
            TargetType="TabItem">
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="Width" Value="60" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <wpfui:TitleBar
            x:Name="wpfuiTitleBar"
            Title="Magick Crop &amp; Measure by TheJoeFin"
            Grid.ColumnSpan="2"
            Height="32"
            Background="{wpfui:ThemeResource ApplicationBackgroundBrush}"
            Foreground="{wpfui:ThemeResource TextFillColorPrimaryBrush}">
            <wpfui:TitleBar.Resources>
                <Style BasedOn="{StaticResource {x:Type wpfui:TitleBarButton}}" TargetType="wpfui:TitleBarButton">
                    <Setter Property="ButtonsForeground" Value="White" />
                    <Setter Property="MouseOverButtonsForeground" Value="Yellow" />
                </Style>
            </wpfui:TitleBar.Resources>
            <wpfui:TitleBar.Icon>
                <wpfui:ImageIcon Source="/Iconv3.ico" />
            </wpfui:TitleBar.Icon>
        </wpfui:TitleBar>

        <Grid
            x:Name="MainGrid"
            Grid.Row="1"
            Grid.Column="0"
            Background="Gray"
            ClipToBounds="True"
            IsManipulationEnabled="True"
            behaviors:PinchZoomBehavior.IsEnabled="True"
            behaviors:PinchZoomBehavior.ZoomElement="{Binding ElementName=ShapeCanvas}"
            behaviors:PinchZoomBehavior.MinScale="0.1"
            behaviors:PinchZoomBehavior.MaxScale="8"
            PreviewMouseWheel="ShapeCanvas_PreviewMouseWheel">
            <Canvas x:Name="ShapeCanvas" Margin="50,50,0,0">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="canvasScale" ScaleX="1" ScaleY="1" />
                        <TranslateTransform x:Name="canvasTranslate" X="0" Y="0" />
                    </TransformGroup>
                </Canvas.RenderTransform>
                <Grid x:Name="ImageGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Image
                        x:Name="MainImage"
                        MouseDown="ShapeCanvas_MouseDown"
                        Stretch="Uniform" />
                    <InkCanvas
                        x:Name="DrawingCanvas"
                        Background="Transparent"
                        IsEnabled="False"
                        IsHitTestVisible="False"
                        StrokeCollected="DrawingCanvas_StrokeCollected" />
                    <ResizeGrip
                        x:Name="ImageResizeGrip"
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="#0066FF"
                        Cursor="SizeAll"
                        IsManipulationEnabled="True"
                        MouseDown="ImageResizeGrip_MouseDown"
                        ToolTip="Resize handle"
                        Visibility="Hidden" />
                </Grid>

                <Ellipse
                    x:Name="TopLeft"
                    Canvas.Left="100"
                    Canvas.Top="100"
                    MouseDown="TopLeft_MouseDown"
                    Tag="0"
                    ToolTip="Drag to move top-left marker" />
                <Ellipse
                    x:Name="TopRight"
                    Canvas.Left="700"
                    Canvas.Top="100"
                    MouseDown="TopLeft_MouseDown"
                    Tag="1"
                    ToolTip="Drag to move top-right marker" />
                <Ellipse
                    x:Name="BottomRight"
                    Canvas.Left="700"
                    Canvas.Top="525"
                    MouseDown="TopLeft_MouseDown"
                    Tag="2"
                    ToolTip="Drag to move bottom-right marker" />
                <Ellipse
                    x:Name="BottomLeft"
                    Canvas.Left="100"
                    Canvas.Top="525"
                    MouseDown="TopLeft_MouseDown"
                    Tag="3"
                    ToolTip="Drag to move bottom-left marker" />

                <local:ResizableRectangle x:Name="CroppingRectangle" Visibility="Collapsed" />
            </Canvas>
            <!--  Rotation angle overlay label  -->
            <TextBlock
                x:Name="RotationOverlayLabel"
                Margin="60,10,0,0"
                Padding="4,2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#66000000"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="White"
                IsHitTestVisible="False"
                Text="0°"
                Visibility="Collapsed" />
        </Grid>

        <c:WelcomeMessage
            x:Name="WelcomeMessageModal"
            Grid.Row="1"
            OverlayButtonEvent="OverlayButton_Click"
            PasteButtonEvent="PasteButton_Click"
            PrimaryButtonEvent="OpenFileButton_Click" />

        <Border
            x:Name="BottomBorder"
            Grid.Row="1"
            Grid.Column="1"
            Padding="12,12"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Background="{wpfui:ThemeResource ApplicationBackgroundBrush}"
            Visibility="Collapsed">
            <Grid x:Name="BottomPane">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <ScrollViewer>
                    <StackPanel Width="200" Orientation="Vertical">
                        <Grid Width="160">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                x:Name="ImageIconOpenedName"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                Symbol="Image24"
                                ToolTip="Currently opened image" />
                            <TextBlock
                                x:Name="ReOpenFileText"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="Image File Name"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="Opened image file name" />
                            <wpfui:SymbolIcon
                                x:Name="CloseFileIcon"
                                Grid.Column="2"
                                Margin="5,0,0,0"
                                MouseDown="CloseFileIcon_MouseDown"
                                Symbol="Dismiss24"
                                ToolTip="Click to close and show the welcome screen"
                                Visibility="Collapsed" />
                        </Grid>
                        <StackPanel
                            x:Name="UndoRedoPanel"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <MenuItem
                                x:Name="UndoMenuItem"
                                Click="UndoMenuItem_Click"
                                Header="Undo"
                                IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                   AncestorType={x:Type wpfui:FluentWindow}},
                                                    Path=undoRedo.CanUndo,
                                                    Mode=OneWay}"
                                ToolTip="Undo last action">
                                <MenuItem.Icon>
                                    <wpfui:SymbolIcon Symbol="ArrowUndo24" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem
                                x:Name="RedoMenuItem"
                                Click="RedoMenuItem_Click"
                                Header=""
                                IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                   AncestorType={x:Type wpfui:FluentWindow}},
                                                    Path=undoRedo.CanRedo,
                                                    Mode=OneWay}"
                                ToolTip="Redo last undone action">
                                <MenuItem.Icon>
                                    <wpfui:SymbolIcon Symbol="ArrowRedo24" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </StackPanel>
                        <TextBlock Text="Tools" />
                        <TabControl ItemContainerStyle="{StaticResource NarrowTabHeaderStyle}">
                            <TabItem x:Name="TransformTabItem">
                                <TabItem.Header>
                                    <wpfui:SymbolIcon Symbol="Crop24" ToolTip="Crop and transform" />
                                </TabItem.Header>
                                <StackPanel Orientation="Vertical">
                                    <MenuItem
                                        Name="Rotate90CwMenuItem"
                                        Click="Rotate90CwMenuItem_Click"
                                        Header="Rotate 90° CW"
                                        ToolTip="Rotate 90 degrees clockwise">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="RotateRight24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="Rotate90CcwMenuItem"
                                        Click="Rotate90CcwMenuItem_Click"
                                        Header="Rotate 90° CCW"
                                        ToolTip="Rotate 90 degrees counter-clockwise">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="RotateLeft24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="PreciseRotateMenuItem"
                                        Click="PreciseRotateMenuItem_Click"
                                        Header="Rotate (Precise)"
                                        ToolTip="Rotate image by arbitrary angle">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="ArrowRotateClockwise24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <StackPanel
                                        x:Name="RotateControlsPanel"
                                        Margin="0,4,0,8"
                                        Visibility="Collapsed">
                                        <Border
                                            Padding="8"
                                            BorderBrush="#2A2A2A"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="0,0,0,6"
                                                    FontWeight="SemiBold"
                                                    Text="Rotation" />
                                                <Grid Margin="0,0,0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="60" />
                                                    </Grid.ColumnDefinitions>
                                                    <Slider
                                                        x:Name="RotateAngleSlider"
                                                        Margin="0,0,8,0"
                                                        IsSnapToTickEnabled="False"
                                                        LargeChange="5"
                                                        Maximum="180"
                                                        Minimum="-180"
                                                        SmallChange="0.1"
                                                        TickFrequency="15"
                                                        ValueChanged="RotateAngleSlider_ValueChanged" />
                                                    <wpfui:NumberBox
                                                        x:Name="RotateAngleNumberBox"
                                                        Grid.Column="1"
                                                        HorizontalContentAlignment="Center"
                                                        Maximum="180"
                                                        Minimum="-180"
                                                        SmallChange="0.1"
                                                        ValueChanged="RotateAngleNumberBox_ValueChanged"
                                                        Value="0" />
                                                </Grid>
                                                <ToggleButton
                                                    x:Name="FreeRotateToggle"
                                                    Margin="0,4,0,4"
                                                    Checked="FreeRotateToggle_Checked"
                                                    Style="{StaticResource SmallToggleButton}"
                                                    ToolTip="Click then drag on image to rotate freely"
                                                    Unchecked="FreeRotateToggle_Unchecked">
                                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                        <wpfui:SymbolIcon Margin="0,0,6,0" Symbol="ArrowClockwise24" />
                                                        <TextBlock VerticalAlignment="Center" Text="Free Rotate" />
                                                    </StackPanel>
                                                </ToggleButton>
                                                <StackPanel
                                                    Margin="0,4,0,0"
                                                    HorizontalAlignment="Left"
                                                    Orientation="Vertical">
                                                    <wpfui:Button
                                                        x:Name="ApplyRotationButton"
                                                        Width="150"
                                                        Margin="0,0,6,0"
                                                        Appearance="Primary"
                                                        Click="ApplyRotationButton_Click"
                                                        Content="Apply"
                                                        Foreground="White" />
                                                    <wpfui:Button
                                                        x:Name="ResetRotationButton"
                                                        Width="150"
                                                        Margin="0,6,6,6"
                                                        Click="ResetRotationButton_Click"
                                                        Content="Reset" />
                                                    <wpfui:Button
                                                        x:Name="CancelRotationButton"
                                                        Width="150"
                                                        Appearance="Danger"
                                                        Click="CancelRotationButton_Click"
                                                        Content="Cancel" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    <MenuItem
                                        Name="FlipHozMenuItem"
                                        Click="FlipHozMenuItem_Click"
                                        Header="Flip Horizontal"
                                        ToolTip="Flip image horizontally">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="FlipHorizontal24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="FlipVertMenuItem"
                                        Click="FlipVertMenuItem_Click"
                                        Header="Flip Vertical"
                                        ToolTip="Flip image vertically">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="FlipVertical24" />
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <Separator />

                                    <MenuItem
                                        Name="StretchMenuItem"
                                        Click="StretchMenuItem_Click"
                                        Header="Resize Image"
                                        ToolTip="Resize the image by pixels or percentage">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon RenderTransformOrigin="0.5, 0.5" Symbol="Resize24">
                                                <wpfui:SymbolIcon.RenderTransform>
                                                    <RotateTransform Angle="-90" />
                                                </wpfui:SymbolIcon.RenderTransform>
                                            </wpfui:SymbolIcon>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="CropImage"
                                        Click="CropImage_Click"
                                        Header="Crop Image"
                                        ToolTip="Crop a portion of the image">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="Crop24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="PerspectiveCorrectionMenuItem"
                                        Click="PerspectiveCorrectionMenuItem_Click"
                                        Header="Transform Image"
                                        ToolTip="Correct perspective using corner markers">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Foreground="#0066FF" Symbol="SelectObjectSkewEdit24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </StackPanel>
                            </TabItem>
                            <TabItem x:Name="EditImageTabItem">
                                <TabItem.Header>
                                    <wpfui:SymbolIcon Symbol="ImageEdit24" ToolTip="Adjust image appearance" />
                                </TabItem.Header>
                                <StackPanel Orientation="Vertical">
                                    <MenuItem
                                        Name="AutoContrastMenuItem"
                                        Click="AutoContrastMenuItem_Click"
                                        Header="10% Auto Contrast"
                                        ToolTip="Increase contrast automatically">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="DarkTheme24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="BlackPointMenuItem"
                                        Click="BlackPointMenuItem_Click"
                                        Header="10% Black Threshold"
                                        ToolTip="Adjust black point threshold">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="WeatherMoon24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="WhitePointMenuItem"
                                        Click="WhitePointMenuItem_Click"
                                        Header="10% White Threshold"
                                        ToolTip="Adjust white point threshold">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="BrightnessHigh24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem
                                        Name="GrayscaleMenuItem"
                                        Click="GrayscaleMenuItem_Click"
                                        Header="Grayscale"
                                        ToolTip="Convert image to grayscale">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="Color24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="InvertMenuItem"
                                        Click="InvertMenuItem_Click"
                                        Header="Invert Colors"
                                        ToolTip="Invert image colors">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="SquareShadow20" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="WhiteBalanceMenuItem"
                                        Click="WhiteBalanceMenuItem_Click"
                                        Header="Auto White Balance"
                                        ToolTip="Balance colors automatically">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="Whiteboard24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="AutoLevelsMenuItem"
                                        Click="AutoLevelsMenuItem_Click"
                                        Header="Auto Level"
                                        ToolTip="Auto-adjust levels">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="BezierCurveSquare20" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="AutoGammaMenuItem"
                                        Click="AutoGammaMenuItem_Click"
                                        Header="Auto Gamma"
                                        ToolTip="Auto-adjust gamma">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="AddSubtractCircle24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem
                                        Name="BlurMenuItem"
                                        Click="BlurMenuItem_Click"
                                        Header="Gaussian Blur"
                                        ToolTip="Apply Gaussian blur">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="Blur24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Name="FindEdgesMenuItem"
                                        Click="FindEdgesMenuItem_Click"
                                        Header="Find Edges"
                                        ToolTip="Detect edges in image">
                                        <MenuItem.Icon>
                                            <wpfui:SymbolIcon Symbol="Triangle24" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </StackPanel>
                            </TabItem>
                            <TabItem x:Name="MeasureTabItem">
                                <TabItem.Header>
                                    <wpfui:SymbolIcon Symbol="Ruler24" ToolTip="Measure distance and angle" />
                                </TabItem.Header>
                                <StackPanel Orientation="Vertical">
                                    <GroupBox Padding="0,12" Header="Measurement Tools">
                                        <StackPanel x:Name="MeasureToolsPanel" HorizontalAlignment="Center">
                                            <ToggleButton
                                                x:Name="MeasureDistanceToggle"
                                                Width="150"
                                                Margin="0,4"
                                                Checked="ToolSelector_Checked"
                                                Click="ToolSelector_Clicked"
                                                ToolTip="Add a distance measurement">
                                                <ToggleButton.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="Ruler24" />
                                                        <TextBlock VerticalAlignment="Center" Text="Add Distance" />
                                                    </StackPanel>
                                                </ToggleButton.Content>
                                            </ToggleButton>
                                            <ToggleButton
                                                x:Name="MeasureAngleToggle"
                                                Width="150"
                                                Margin="0,4"
                                                Checked="ToolSelector_Checked"
                                                Click="ToolSelector_Clicked"
                                                ToolTip="Add an angle measurement">
                                                <ToggleButton.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="DataPie24" />
                                                        <TextBlock VerticalAlignment="Center" Text="Add Angle" />
                                                    </StackPanel>
                                                </ToggleButton.Content>
                                            </ToggleButton>
                                            <ToggleButton
                                                x:Name="RectangleMeasureToggle"
                                                Width="150"
                                                Margin="0,4"
                                                Checked="ToolSelector_Checked"
                                                Click="ToolSelector_Clicked"
                                                ToolTip="Add a rectangle measurement">
                                                <ToggleButton.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="RectangleLandscape24" />
                                                        <TextBlock VerticalAlignment="Center" Text="Add Rectangle" />
                                                    </StackPanel>
                                                </ToggleButton.Content>
                                            </ToggleButton>
                                            <ToggleButton
                                                x:Name="CircleMeasureToggle"
                                                Width="150"
                                                Margin="0,4"
                                                Checked="ToolSelector_Checked"
                                                Click="ToolSelector_Clicked"
                                                ToolTip="Add a circle measurement">
                                                <ToggleButton.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="Circle24" />
                                                        <TextBlock VerticalAlignment="Center" Text="Add Circle" />
                                                    </StackPanel>
                                                </ToggleButton.Content>
                                            </ToggleButton>
                                            <ToggleButton
                                                x:Name="HorizontalLineRadio"
                                                Width="150"
                                                Margin="0,4"
                                                Checked="ToolSelector_Checked"
                                                Click="ToolSelector_Clicked"
                                                ToolTip="Add a horizontal guide line">
                                                <ToggleButton.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="SplitHorizontal24" />
                                                        <TextBlock VerticalAlignment="Center" Text="Horizontal Line" />
                                                    </StackPanel>
                                                </ToggleButton.Content>
                                            </ToggleButton>
                                            <ToggleButton
                                                x:Name="VerticalLineToggle"
                                                Width="150"
                                                Margin="0,4"
                                                Checked="ToolSelector_Checked"
                                                Click="ToolSelector_Clicked"
                                                ToolTip="Add a vertical guide line">
                                                <ToggleButton.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="SplitVertical24" />
                                                        <TextBlock VerticalAlignment="Center" Text="Vertical Line" />
                                                    </StackPanel>
                                                </ToggleButton.Content>
                                            </ToggleButton>
                                            <ToggleButton
                                                x:Name="PolygonMeasureToggle"
                                                Width="150"
                                                Margin="0,4"
                                                Checked="ToolSelector_Checked"
                                                Click="ToolSelector_Clicked"
                                                ToolTip="Add a polygon measurement">
                                                <ToggleButton.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="SelectObjectSkewEdit24" />
                                                        <TextBlock VerticalAlignment="Center" Text="Add Polygon" />
                                                    </StackPanel>
                                                </ToggleButton.Content>
                                            </ToggleButton>
                                            <ToggleButton
                                                x:Name="DrawingLinesToggle"
                                                Width="150"
                                                Margin="0,4"
                                                Checked="DrawingLinesRadio_Checked"
                                                Click="ToolSelector_Clicked"
                                                ToolTip="Draw freehand lines on the image"
                                                Unchecked="DrawingLinesRadio_Unchecked">
                                                <ToggleButton.Content>
                                                    <StackPanel Orientation="Horizontal">
                                                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="Pen24" />
                                                        <TextBlock VerticalAlignment="Center" Text="Draw a Line" />
                                                    </StackPanel>
                                                </ToggleButton.Content>
                                            </ToggleButton>
                                        </StackPanel>
                                    </GroupBox>

                                    <TextBlock
                                        Margin="0,8"
                                        FontStyle="Italic"
                                        Text="Click and drag on the image to create measurements"
                                        TextWrapping="Wrap" />

                                    <StackPanel
                                        x:Name="MeasurementButtonPanel"
                                        Grid.Row="1"
                                        Orientation="Vertical">

                                        <Label Margin="0,10,0,0" Content="Set Scale (pixels/unit):" />
                                        <wpfui:NumberBox
                                            x:Name="ScaleInput"
                                            Width="150"
                                            Minimum="0.0001"
                                            ToolTip="Set the scale of pixels to real-world units"
                                            ValueChanged="ScaleInput_ValueChanged"
                                            Value="1.0" />

                                        <TextBox
                                            x:Name="MeasurementUnits"
                                            Width="150"
                                            Margin="0,10,0,16"
                                            AcceptsReturn="False"
                                            AcceptsTab="False"
                                            Text="Pixels"
                                            TextChanged="MeasurementUnits_TextChanged"
                                            ToolTip="Units label displayed with measurements" />

                                        <StackPanel x:Name="DrawingOptionsPanel" Visibility="Collapsed">
                                            <Label Margin="0,8,0,0" Content="Stroke Thickness:" />
                                            <Slider
                                                x:Name="StrokeThicknessSlider"
                                                Width="150"
                                                Maximum="10"
                                                Minimum="1"
                                                ToolTip="Set stroke thickness for drawn lines"
                                                ValueChanged="StrokeThicknessSlider_ValueChanged"
                                                Value="2" />
                                        </StackPanel>

                                        <wpfui:HyperlinkButton
                                            x:Name="CloseMeasurementButton"
                                            HorizontalAlignment="Center"
                                            Appearance="Danger"
                                            Click="CloseMeasurementButton_Click"
                                            Content="Clear all"
                                            Foreground="Red"
                                            ToolTip="Remove all measurements from the image">
                                            <wpfui:HyperlinkButton.Icon>
                                                <wpfui:SymbolIcon Symbol="Dismiss24" />
                                            </wpfui:HyperlinkButton.Icon>
                                        </wpfui:HyperlinkButton>
                                    </StackPanel>
                                </StackPanel>
                            </TabItem>
                        </TabControl>

                    </StackPanel>
                </ScrollViewer>
                <StackPanel
                    x:Name="CropButtonPanel"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Visibility="Collapsed">
                    <wpfui:Button
                        x:Name="ApplyCropButton"
                        Width="180"
                        Margin="0,8"
                        Appearance="Primary"
                        Click="ApplyCropButton_Click"
                        Content="Apply Crop"
                        Foreground="White"
                        ToolTip="Apply the crop to the image">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="Crop24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                    <wpfui:Button
                        x:Name="CancelCropButton"
                        Width="180"
                        Appearance="Danger"
                        Click="CancelCrop_Click"
                        Content="Cancel"
                        ToolTip="Cancel cropping">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="Dismiss24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                </StackPanel>
                <StackPanel
                    x:Name="TransformButtonPanel"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    d:Visibility="Visible"
                    Orientation="Vertical"
                    Visibility="Collapsed">

                    <Grid
                        x:Name="CustomButtonGrid"
                        HorizontalAlignment="Left"
                        Visibility="Collapsed">
                        <wpfui:Flyout
                            Margin="0,0,0,20"
                            IsOpen="{Binding ElementName=EditToggleButton,
                                             Path=IsChecked,
                                             Mode=TwoWay}"
                            Placement="Top">
                            <Grid x:Name="CustomSizeStackPanel">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Width="80"
                                    VerticalAlignment="Center"
                                    Content="Width"
                                    Target="{Binding ElementName=CustomWidth}" />
                                <wpfui:NumberBox
                                    x:Name="CustomWidth"
                                    Grid.Column="1"
                                    Width="150"
                                    VerticalAlignment="Center"
                                    Minimum="0"
                                    ToolTip="Custom width"
                                    ValueChanged="CustomWidth_ValueChanged"
                                    Value="10" />
                                <Label
                                    Grid.Row="2"
                                    Width="80"
                                    VerticalAlignment="Center"
                                    Content="Height"
                                    Target="{Binding ElementName=CustomHeight}" />
                                <wpfui:NumberBox
                                    x:Name="CustomHeight"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="150"
                                    VerticalAlignment="Center"
                                    Minimum="0"
                                    ToolTip="Custom height"
                                    ValueChanged="CustomWidth_ValueChanged"
                                    Value="5" />
                            </Grid>
                        </wpfui:Flyout>
                        <ToggleButton
                            x:Name="EditToggleButton"
                            Width="180"
                            Margin="0,4"
                            HorizontalContentAlignment="Left"
                            ToolTip="Toggle custom aspect ratio input">
                            <StackPanel Orientation="Horizontal">
                                <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="ResizeImage24" />
                                <TextBlock x:Name="AspectRatioTextBox" Text="Ratio: 0.5" />
                            </StackPanel>
                        </ToggleButton>
                    </Grid>
                    <ComboBox
                        x:Name="AspectRatioComboBox"
                        Width="180"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        SelectionChanged="AspectRatioComboBox_SelectionChanged"
                        ToolTip="Choose a preset aspect ratio">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="models:AspectRatioItem">
                                <StackPanel Orientation="Horizontal">
                                    <wpfui:SymbolIcon Margin="0,0,10,0" Symbol="{Binding Symbol}" />
                                    <TextBlock Text="{Binding Text}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <local:AspectRatioTransform x:Name="AspectRatioTransformPreview" />
                    <wpfui:Button
                        x:Name="ApplyTransformButton"
                        Width="180"
                        Margin="0,6"
                        Appearance="Primary"
                        Click="ApplyButton_Click"
                        Content="Apply Transform"
                        Foreground="White"
                        ToolTip="Apply the perspective transform">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="SelectObjectSkewEdit24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                    <wpfui:Button
                        x:Name="CancelTransformButton"
                        Width="180"
                        Appearance="Danger"
                        Click="CancelTransformButton_Click"
                        Content="Cancel"
                        ToolTip="Cancel transform">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="Dismiss24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                </StackPanel>
                <StackPanel
                    x:Name="ResizeButtonsPanel"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Visibility="Collapsed">

                    <!--  Current Image Size Display  -->
                    <wpfui:Card Margin="0,6" Padding="12">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,6"
                                FontWeight="SemiBold"
                                Text="Current Size" />
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBlock
                                    x:Name="CurrentWidthDisplay"
                                    FontFamily="Consolas"
                                    Text="0"
                                    ToolTip="Current image width" />
                                <TextBlock Margin="6,0" Text=" × " />
                                <TextBlock
                                    x:Name="CurrentHeightDisplay"
                                    FontFamily="Consolas"
                                    Text="0"
                                    ToolTip="Current image height" />
                                <TextBlock
                                    x:Name="CurrentUnitsDisplay"
                                    Margin="6,0,0,0"
                                    Text=" px"
                                    ToolTip="Current units" />
                            </StackPanel>
                        </StackPanel>
                    </wpfui:Card>

                    <!--  Size Input Controls  -->
                    <wpfui:Card Margin="0,6" Padding="12">
                        <StackPanel>
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontWeight="SemiBold"
                                    Text="New Size" />
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ToggleButton
                                        x:Name="PixelModeToggle"
                                        Width="35"
                                        Height="26"
                                        Margin="0,0,3,0"
                                        Padding="0"
                                        Checked="PixelModeToggle_Checked"
                                        Content="px"
                                        IsChecked="True"
                                        ToolTip="Enter width and height in pixels"
                                        Unchecked="PixelModeToggle_Unchecked" />
                                    <ToggleButton
                                        x:Name="PercentageModeToggle"
                                        Width="35"
                                        Height="26"
                                        Padding="0"
                                        Checked="PercentageModeToggle_Checked"
                                        Content="%"
                                        ToolTip="Enter width and height as a percentage of current size"
                                        Unchecked="PercentageModeToggle_Unchecked" />
                                </StackPanel>
                            </Grid>

                            <StackPanel Orientation="Vertical">
                                <!--  Width Input  -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock
                                        Margin="0,0,0,3"
                                        FontSize="12"
                                        Text="Width" />
                                    <wpfui:TextBox
                                        x:Name="WidthTextBox"
                                        PlaceholderText="Width"
                                        TextChanged="SizeTextBox_TextChanged"
                                        ToolTip="Enter the new width" />
                                </StackPanel>

                                <!--  Aspect Ratio Lock  -->
                                <ToggleButton
                                    x:Name="AspectRatioLockToggle"
                                    Width="32"
                                    Height="32"
                                    Margin="0,12,0,4"
                                    Padding="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Checked="AspectRatioLockToggle_Checked"
                                    IsChecked="True"
                                    ToolTip="Lock aspect ratio"
                                    Unchecked="AspectRatioLockToggle_Unchecked">
                                    <wpfui:SymbolIcon x:Name="AspectRatioIcon" Symbol="Link24" />
                                </ToggleButton>

                                <!--  Height Input  -->
                                <StackPanel Grid.Row="2" Grid.Column="2">
                                    <TextBlock
                                        Margin="0,0,0,3"
                                        FontSize="12"
                                        Text="Height" />
                                    <wpfui:TextBox
                                        x:Name="HeightTextBox"
                                        PlaceholderText="Height"
                                        TextChanged="SizeTextBox_TextChanged"
                                        ToolTip="Enter the new height" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </wpfui:Card>

                    <!--  Action Buttons  -->
                    <wpfui:Button
                        x:Name="ApplyResizeButton"
                        Width="180"
                        Margin="0,6"
                        Appearance="Primary"
                        Click="ApplyResizeButton_Click"
                        Content="Apply Resize"
                        Foreground="White"
                        ToolTip="Apply resizing with the specified values">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon RenderTransformOrigin="0.5, 0.5" Symbol="Resize24">
                                <wpfui:SymbolIcon.RenderTransform>
                                    <RotateTransform Angle="-90" />
                                </wpfui:SymbolIcon.RenderTransform>
                            </wpfui:SymbolIcon>
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                    <wpfui:Button
                        x:Name="CancelResizeButton"
                        Width="180"
                        Appearance="Danger"
                        Click="CancelResizeButton_Click"
                        Content="Cancel"
                        ToolTip="Cancel resizing">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="Dismiss24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                </StackPanel>
                <StackPanel
                    x:Name="SaveAndOpenDestFolderPanel"
                    Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <wpfui:Button
                        x:Name="SavePackageButton"
                        Width="180"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        Click="SavePackageButton_Click"
                        Content="Save Package..."
                        ToolTip="Save image with measurements as a .mcm package">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="SaveCopy24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                    <wpfui:Button
                        x:Name="Save"
                        Width="180"
                        Margin="0,8"
                        HorizontalAlignment="Center"
                        Click="Save_Click"
                        Content="Save image..."
                        ToolTip="Apply Transform, Save, and Preview file">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="Save24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                    <wpfui:Button
                        x:Name="OpenFolderButton"
                        Width="180"
                        HorizontalAlignment="Center"
                        Click="OpenFolderButton_Click"
                        Content="Open Folder"
                        IsEnabled="False"
                        ToolTip="Open Folder Where File Was Saved">
                        <wpfui:Button.Icon>
                            <wpfui:SymbolIcon Symbol="FolderArrowRight24" />
                        </wpfui:Button.Icon>
                    </wpfui:Button>
                </StackPanel>
            </Grid>
        </Border>
        <wpfui:ProgressRing
            x:Name="IsWorkingBar"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="#0066FF"
            IsIndeterminate="True"
            ToolTip="Processing..."
            Visibility="Collapsed" />

        <ContentPresenter
            x:Name="Presenter"
            Grid.Row="1"
            Grid.ColumnSpan="2" />

        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem
                    x:Name="ResetMenuItem"
                    Click="ResetMenuItem_Click"
                    Header="Reset"
                    ToolTip="Reset the workspace" />
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</wpfui:FluentWindow>
