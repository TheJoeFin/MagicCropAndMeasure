<ui:FluentWindow
    x:Class="MagickCrop.Windows.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:MagickCrop.ViewModels"
    Title="{Binding Title}"
    Width="400"
    Height="350"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:AboutWindowViewModel, IsDesignTimeCreatable=True}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- App Icon and Name -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Image Source="/Iconv3.png" Width="48" Height="48" Margin="0,0,10,0" />
            <TextBlock Text="{Binding AppName}" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center" />
        </StackPanel>

        <!-- Version -->
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="0,0,0,10"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="{Binding Version, StringFormat='Version {0}'}" />

        <!-- Description -->
        <TextBlock
            Grid.Row="2"
            Margin="0,0,0,20"
            Text="{Binding Description}"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <!-- Links Section -->
        <StackPanel Grid.Row="3" VerticalAlignment="Top">
            <TextBlock Margin="0,0,0,10" FontWeight="SemiBold" Text="Dependencies" />

            <ui:HyperlinkButton
                Margin="0,0,0,5"
                Command="{Binding OpenImageMagickCommand}"
                Content="ImageMagick" />

            <ui:HyperlinkButton
                Margin="0,0,0,5"
                Command="{Binding OpenMagickNetCommand}"
                Content="Magick.NET" />

            <ui:HyperlinkButton
                Margin="0,0,0,15"
                Command="{Binding OpenWpfUiCommand}"
                Content="WPF-UI" />

            <TextBlock Margin="0,0,0,10" FontWeight="SemiBold" Text="Links" />

            <ui:HyperlinkButton
                Margin="0,0,0,5"
                Command="{Binding OpenGitHubCommand}"
                Content="GitHub Repository" />

            <ui:HyperlinkButton
                Command="{Binding OpenWebsiteCommand}"
                Content="Creator's Website" />
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="4">
            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="{Binding Copyright}" />

            <ui:Button
                Width="100"
                HorizontalAlignment="Center"
                Click="CloseButton_Click"
                Command="{Binding CloseCommand}"
                Content="Close" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
