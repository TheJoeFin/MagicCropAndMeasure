<wpfui:FluentWindow
    x:Class="MagickCrop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MagickCrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Magick Crop by TheJoeFin v1.1"
    Width="900"
    Height="700"
    Background="Gray"
    MouseMove="TopLeft_MouseMove"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="Ellipse">
            <Setter Property="Height" Value="12" />
            <Setter Property="Width" Value="12" />
            <Setter Property="Cursor" Value="SizeAll" />
            <Setter Property="Fill" Value="#0066FF" />
            <Setter Property="Stroke" Value="White" />
            <Setter Property="StrokeThickness" Value="1" />
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <wpfui:TitleBar Title="Magick Crop by TheJoeFin v1.1" Foreground="{wpfui:ThemeResource TextFillColorPrimaryBrush}">
            <wpfui:TitleBar.Icon>
                <wpfui:ImageIcon Source="/MagickCropLogo.ico" />
            </wpfui:TitleBar.Icon>
        </wpfui:TitleBar>
        <Grid Grid.Row="1">
            <Canvas x:Name="ShapeCanvas" PreviewMouseWheel="ShapeCanvas_PreviewMouseWheel">
                <Image
                    x:Name="MainImage"
                    Height="600"
                    Cursor="Hand"
                    MouseDown="ShapeCanvas_MouseDown" />
                <Ellipse
                    x:Name="TopLeft"
                    Canvas.Left="100"
                    Canvas.Top="100"
                    MouseDown="TopLeft_MouseDown"
                    Tag="0" />
                <Ellipse
                    x:Name="TopRight"
                    Canvas.Left="700"
                    Canvas.Top="100"
                    MouseDown="TopLeft_MouseDown"
                    Tag="1" />
                <Ellipse
                    x:Name="BottomRight"
                    Canvas.Left="700"
                    Canvas.Top="525"
                    MouseDown="TopLeft_MouseDown"
                    Tag="2" />
                <Ellipse
                    x:Name="BottomLeft"
                    Canvas.Left="100"
                    Canvas.Top="525"
                    MouseDown="TopLeft_MouseDown"
                    Tag="3" />
            </Canvas>

            <Border
                Padding="32,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="{wpfui:ThemeResource ApplicationBackgroundBrush}"
                CornerRadius="8,8,0,0">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Direction="270"
                        ShadowDepth="4" />
                </Border.Effect>
                <StackPanel x:Name="BottomPane" Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="Medium"
                        Foreground="{wpfui:ThemeResource TextFillColorPrimaryBrush}"
                        TextWrapping="Wrap">
                        <Hyperlink Click="Hyperlink_Click" NavigateUri="https://www.JoeFinApps.com">Hello There!</Hyperlink>
                        Scroll to Zoom,<LineBreak />
                        Click and drag to pan and move points.</TextBlock>
                    <Button
                        x:Name="OpenFileButton"
                        Margin="8,4"
                        Click="OpenFileButton_Click"
                        Content="Open File" />
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <ComboBox
                            x:Name="AspectRatioComboBox"
                            Width="220"
                            Margin="8,4"
                            VerticalAlignment="Center"
                            SelectionChanged="AspectRatioComboBox_SelectionChanged">
                            <ComboBoxItem
                                Content="11in wide x 8.5in tall"
                                IsSelected="True"
                                Tag="LetterLandscape" />
                            <ComboBoxItem Content="8.5in wide x 11in tall" Tag="LetterPortriat" />
                            <ComboBoxItem Content="Square" Tag="Square" />
                            <ComboBoxItem Content="A4 Portrait" Tag="A4Portrait" />
                            <ComboBoxItem Content="A4 Landscape" Tag="A4Landscape" />
                            <ComboBoxItem Content="US Dollar Bill Portrait" Tag="UsDollarBillPortrait" />
                            <ComboBoxItem Content="US Dollar Bill Landscape" Tag="UsDollarBillLandscape" />
                            <ComboBoxItem
                                x:Name="CustomComboBoxItem"
                                Content="Custom aspect ratio: 0.5"
                                Tag="Custom" />
                        </ComboBox>

                        <Grid x:Name="CustomButtonGrid" Visibility="Hidden">
                            <wpfui:Flyout IsOpen="{Binding ElementName=EditToggleButton, Path=IsChecked, Mode=TwoWay}" Placement="Top">
                                <Grid x:Name="CustomSizeStackPanel">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="10" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Label
                                        Width="80"
                                        VerticalAlignment="Center"
                                        Content="Width"
                                        Target="{Binding ElementName=CustomWidth}" />
                                    <wpfui:NumberBox
                                        x:Name="CustomWidth"
                                        Grid.Column="1"
                                        Width="150"
                                        VerticalAlignment="Center"
                                        Minimum="0"
                                        ValueChanged="CustomWidth_ValueChanged"
                                        Value="100" />
                                    <Label
                                        Grid.Row="2"
                                        Width="80"
                                        VerticalAlignment="Center"
                                        Content="Height"
                                        Target="{Binding ElementName=CustomHeight}" />
                                    <wpfui:NumberBox
                                        x:Name="CustomHeight"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Width="150"
                                        VerticalAlignment="Center"
                                        Minimum="0"
                                        ValueChanged="CustomWidth_ValueChanged"
                                        Value="50" />
                                </Grid>
                            </wpfui:Flyout>
                            <ToggleButton x:Name="EditToggleButton" Margin="8,4">
                                <wpfui:SymbolIcon Symbol="Edit24" />
                            </ToggleButton>
                        </Grid>

                    </StackPanel>
                    <Button
                        x:Name="Save"
                        Margin="8,4"
                        Click="Save_Click"
                        Content="Save"
                        IsEnabled="False"
                        ToolTip="Apply Transform and Save File" />
                    <Button
                        x:Name="OpenFolderButton"
                        Margin="8,4"
                        Click="OpenFolderButton_Click"
                        Content="Open Folder"
                        IsEnabled="False"
                        ToolTip="Open Folder Where File Was Saved" />
                </StackPanel>
            </Border>
            <wpfui:ProgressRing
                x:Name="IsWorkingBar"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="#0066FF"
                IsIndeterminate="True"
                Visibility="Collapsed" />
        </Grid>
    </Grid>
</wpfui:FluentWindow>
